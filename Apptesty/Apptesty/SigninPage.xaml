<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="i11.png"
             x:Class="Apptesty.SigininPage">
    <ContentPage.Content>
        <StackLayout Spacing="50" VerticalOptions="End" Margin="20" AnchorX="50">
            
                <StackLayout BackgroundColor="#BF043055">
                <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Entry Placeholder="الايميل"  x:Name="UserLoginEmail" TextColor="White" FontSize="Large"></Entry>
            <Entry Placeholder="كلمة المرور"  x:Name="UserLoginPassword" IsPassword="True" TextColor="White" FontSize="Large"></Entry>
            <Button BackgroundColor="Gainsboro" Clicked="loginbutton_Clicked" TextColor="Black" Text="تسجيل الدخول" FontSize="Medium" x:Name="loginbutton"/>
                </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>