<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="a122.png"
             x:Class="Apptesty.LoginPage">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="End" Margin="20" >
            <StackLayout BackgroundColor="#BF043055">
            <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>

            <Entry Placeholder="الايميل"  x:Name="UserNewEmail" BackgroundColor="White" FontSize="Large" TextColor="Black"></Entry>
            <Entry Placeholder="كلمة المرور"  x:Name="UserNewPassword" IsPassword="True" BackgroundColor="White" FontSize="Large" TextColor="Black"></Entry>
    
            <Button BackgroundColor="LawnGreen" TextColor="Black" Text="تسجيل حساب جديد" FontSize="Medium" Clicked="signupbutton_Clicked" x:Name="signupbutton"/>
           </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>