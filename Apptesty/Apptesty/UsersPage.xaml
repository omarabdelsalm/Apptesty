<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="Apptesty.UsersPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Gray" >
                <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                    <Image x:Name="imgBanner" Source="ae.png" ></Image>

                    <Label Margin="0,0,0,10" Text="العابد يرحب بكم" FontAttributes="Bold" FontSize="Large" TextColor="White" HorizontalTextAlignment="Center" ></Label>
                    
                    <Entry x:Name="txtId" Placeholder="الباركود"></Entry>
                    <Entry x:Name="txtName" Placeholder="الاسم"></Entry>
                    <Entry x:Name="txtPoint" Placeholder="النقاط"></Entry>
                    <Entry x:Name="txtPoint1" Placeholder="اضافة نقاط"></Entry>
                    <Entry x:Name="txtPoint2" Placeholder="اجمالى النقاط"></Entry>
                    <Entry x:Name="txtPh" Placeholder="رقم الهاتف"></Entry>
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnAdd" WidthRequest="200" Text="اضافة" Clicked="BtnAdd_Clicked" FontSize="Medium" BackgroundColor="#228899"/>
                        <Button x:Name="btnRetrive" WidthRequest="200" Text="استعادة بالباركود" Clicked="BtnRetrive_Clicked" FontSize="Medium" BackgroundColor="Azure"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnUpdate" WidthRequest="200" Text="تحديث" Clicked="BtnUpdate_Clicked" FontSize="Medium" BackgroundColor="Green"/>
                        <Button x:Name="btnDelete" WidthRequest="200" Text="حذف" Clicked="BtnDelete_Clicked" FontSize="Medium" BackgroundColor="red"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button  WidthRequest="200" Text="قراءة الباركود" Clicked="Button_Clicked" FontSize="Medium" BackgroundColor="BurlyWood"/>
                        <Button  WidthRequest="200" Text="الصفحة الرئيسية" Clicked="Button_Clicked_1" FontSize="Medium" BackgroundColor="#22001111"/>
                    </StackLayout>
                    <Button WidthRequest="200" Clicked="Button_Clicked_2" Text="صفحة الاعضاء"  FontSize="Medium" BackgroundColor="red"/>
                    <ListView x:Name="lstPersons" IsVisible="false">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>

                                    <Grid Padding="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.RowSpan="1"
                                           Text="{Binding PhNum}" />
                                        <Label Grid.Column="1"
                                                Text="{Binding Name}"
                                                      FontAttributes="Bold" />
                                        <Label Grid.Row="1"
                                             
                                        Text="{Binding PointNum}"/>

                                    </Grid>
                                </ViewCell>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>